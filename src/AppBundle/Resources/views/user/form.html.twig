{% extends 'AppBundle::base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <p>You are logged in. <a class="link" href="{{ path('logout') }}">Logout</a></p>
                {% else %}
                    <h1>{{ formTitle }}</h1>

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
